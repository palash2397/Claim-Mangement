    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000/api",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Create Task",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Follow up with client\",\n  \"category\": \"Client Communication\",\n  \"status\": \"Pending\",\n  \"assignedTo\": \"John Smith\",\n  \"relatedCase\": \"CLM-2026-001\",\n  \"priority\": \"High\",\n  \"startDate\": \"2026-01-28\",\n  \"dueDate\": \"2026-02-04\",\n  \"estimatedHours\": 2,\n  \"reminder\": \"1 day before\",\n  \"tags\": [\"urgent\", \"client\"],\n  \"visibility\": \"Public\",\n  \"description\": \"Call client to discuss medical update and treatment plan.\",\n  \"internalNotes\": \"Client has been cooperative so far.\",\n  \"attachmentUrl\": \"/uploads/file.pdf\"\n}\n"
        },
        "url": {
          "raw": "{{base_url}}/tasks",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "tasks"
          ]
        }
      }
    },
    {
      "name": "List All Tasks",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/tasks",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "tasks"
          ]
        }
      }
    },
    {
      "name": "Get Task by ID",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/tasks/:id",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "tasks",
            ":id"
          ],
          "variable": [
            {
              "key": "id",
              "value": "",
              "description": "Task ID"
            }
          ]
        }
      }
    },
    {
      "name": "Update Task",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"status\": \"Completed\",\n  \"priority\": \"Medium\",\n  \"dueDate\": \"2026-02-05\",\n  \"internalNotes\": \"Task completed successfully. Client confirmed.\"\n}\n"
        },
        "url": {
          "raw": "{{base_url}}/tasks/:id",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "tasks",
            ":id"
          ],
          "variable": [
            {
              "key": "id",
              "value": "",
              "description": "Task ID"
            }
          ]
        }
      }
    },
