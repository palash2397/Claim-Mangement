{
  "info": {
    "name": "Excel API",
    "description": "API for uploading, listing, and managing Excel files.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000/api",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Upload Excel File",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "file",
              "type": "file",
              "src": [],
              "description": "Excel file to upload (.xlsx, .xls)"
            },
            {
              "key": "sheetName",
              "value": "Cases Data",
              "type": "text",
              "description": "Name of the sheet"
            },
            {
              "key": "sheetType",
              "value": "Cases",
              "type": "text",
              "description": "Type of data in the sheet (e.g., Cases, Contacts, Tasks)"
            }
          ]
        },
        "url": {
          "raw": "{{base_url}}/excel/upload",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "excel",
            "upload"
          ]
        },
        "description": "Upload an Excel file with sheet name and type"
      }
    },
    {
      "name": "List All Excel Files",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/excel",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "excel"
          ]
        },
        "description": "Retrieve all uploaded Excel files sorted by creation date"
      }
    },
    {
      "name": "Delete Excel File",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/excel/:id",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "excel",
            ":id"
          ],
          "variable": [
            {
              "key": "id",
              "value": "",
              "description": "Excel File ID"
            }
          ]
        },
        "description": "Delete an Excel file by ID"
      }
    }
  ]
}
