{
  "info": {
    "name": "CallLogs API",
    "description": "API for managing call and text message logs with follow-up tracking.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000/api",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Create CallLog",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"dateTime\": \"2026-01-28T10:30:00Z\",\n  \"commType\": \"Call\",\n  \"direction\": \"Outgoing\",\n  \"contactRole\": \"Client\",\n  \"contactName\": \"John Doe\",\n  \"phone\": \"555-0123\",\n  \"caseId\": \"CLM-2026-001\",\n  \"clientName\": \"John Doe\",\n  \"durationMinutes\": 15,\n  \"notes\": \"Discussed medical treatment progress and upcoming appointments.\",\n  \"followUpRequired\": true,\n  \"followUpDueDate\": \"2026-02-04\"\n}\n"
        },
        "url": {
          "raw": "{{base_url}}/calllogs",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "calllogs"
          ]
        }
      }
    },
    {
      "name": "Create Text Log",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"dateTime\": \"2026-01-28T14:45:00Z\",\n  \"commType\": \"Text\",\n  \"direction\": \"Incoming\",\n  \"contactRole\": \"Client\",\n  \"contactName\": \"Jane Smith\",\n  \"phone\": \"555-0456\",\n  \"caseId\": \"CLM-2026-002\",\n  \"clientName\": \"Jane Smith\",\n  \"textPreview\": \"Hi, I received the appointment letter. Thanks for sending it!\",\n  \"notes\": \"Client confirmed receipt of appointment letter.\",\n  \"followUpRequired\": false\n}\n"
        },
        "url": {
          "raw": "{{base_url}}/calllogs",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "calllogs"
          ]
        }
      }
    },
    {
      "name": "List All CallLogs",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/calllogs",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "calllogs"
          ]
        }
      }
    },
    {
      "name": "Get CallLog by ID",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/calllogs/:id",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "calllogs",
            ":id"
          ],
          "variable": [
            {
              "key": "id",
              "value": "",
              "description": "CallLog ID"
            }
          ]
        }
      }
    },
    {
      "name": "Update CallLog",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"notes\": \"Follow-up completed. Client confirmed attending next appointment.\",\n  \"followUpRequired\": false,\n  \"durationMinutes\": 18\n}\n"
        },
        "url": {
          "raw": "{{base_url}}/calllogs/:id",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "calllogs",
            ":id"
          ],
          "variable": [
            {
              "key": "id",
              "value": "",
              "description": "CallLog ID"
            }
          ]
        }
      }
    },
    {
      "name": "Delete CallLog",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/calllogs/:id",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "calllogs",
            ":id"
          ],
          "variable": [
            {
              "key": "id",
              "value": "",
              "description": "CallLog ID"
            }
          ]
        }
      }
    }
  ]
}
