{
  "info": {
    "name": "Contacts API",
    "description": "API for managing contacts with status tracking and assignment.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000/api",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Create Contact",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Sarah Johnson\",\n  \"phone\": \"555-0789\",\n  \"email\": \"sarah.johnson@email.com\",\n  \"status\": \"Potential\",\n  \"assigned\": \"Agent123\"\n}\n"
        },
        "url": {
          "raw": "{{base_url}}/contacts",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "contacts"
          ]
        }
      }
    },
    {
      "name": "List All Contacts",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/contacts",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "contacts"
          ]
        }
      }
    },
    {
      "name": "Get Contact by ID",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/contacts/:id",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "contacts",
            ":id"
          ],
          "variable": [
            {
              "key": "id",
              "value": "",
              "description": "Contact ID"
            }
          ]
        }
      }
    },
    {
      "name": "Update Contact",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"status\": \"Client\",\n  \"assigned\": \"Agent456\"\n}\n"
        },
        "url": {
          "raw": "{{base_url}}/contacts/:id",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "contacts",
            ":id"
          ],
          "variable": [
            {
              "key": "id",
              "value": "",
              "description": "Contact ID"
            }
          ]
        }
      }
    },
    {
      "name": "Delete Contact",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/contacts/:id",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "contacts",
            ":id"
          ],
          "variable": [
            {
              "key": "id",
              "value": "",
              "description": "Contact ID"
            }
          ]
        }
      }
    }
  ]
}
